<UserControl x:Class="Formula81.XrmToolBox.Tools.AuditGoggles.Views.ColorTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localmocks="clr-namespace:Formula81.XrmToolBox.Tools.AuditGoggles.Mocks" 
             xmlns:localmodels="clr-namespace:Formula81.XrmToolBox.Tools.AuditGoggles.Models" 
             xmlns:f81xrmpartsconverters="clr-namespace:Formula81.XrmToolBox.Shared.XrmParts.Converters"
             xmlns:f81partsconverters ="clr-namespace:Formula81.XrmToolBox.Shared.Parts.Converters"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <UserControl.Resources>
        <f81xrmpartsconverters:IIconifiableToImageConverter x:Key="IIconifiableToImageConverter"/>
        <f81partsconverters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>
    <ItemsControl x:Name="AuditRecordItemsControl" Grid.Column="2" Grid.RowSpan="2" Background="LightGray"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              ScrollViewer.VerticalScrollBarVisibility="Hidden"
              ItemsSource="{Binding AuditRecordCollection, ElementName=AuditGogglesViewRoot, Mode=OneTime}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel IsItemsHost="True" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type localmodels:AuditRecord}">
                <Border BorderThickness="1" BorderBrush="DarkGray" Margin="1" 
                        Padding="4" CornerRadius="4"
                        Background="{Binding ColorCombination.PrimaryBackground, Converter={StaticResource ColorToBrushConverter}}">
                    <StackPanel Height="20" Orientation="Horizontal" ToolTip="{Binding EntityDisplayName}">
                        <Border Background="White" Width="22" CornerRadius="4" BorderThickness="1" BorderBrush="DarkGray">
                            <Image x:Name="IconImage" Source="{Binding Converter={StaticResource IIconifiableToImageConverter}}" Stretch="None" />
                        </Border>
                        <TextBlock Text="{Binding Name}" Margin="2,0,0,0"
                                   Foreground="{Binding ColorCombination.PrimaryForeground, Converter={StaticResource ColorToBrushConverter}}"
                                   MaxWidth="100" VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" />
                        <Button Content="&#10060;" Margin="2,0,0,0" FontSize="6" Height="12"                                                
                                Command="{Binding RemoveCommand}"
                                CommandParameter="{Binding}" />
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <d:ItemsControl.ItemsSource>
            <localmocks:ColorTestItemsSource />
        </d:ItemsControl.ItemsSource>
    </ItemsControl>
</UserControl>
