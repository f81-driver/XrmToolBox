<UserControl x:Class="Formula81.XrmToolBox.Libraries.Parts.Controls.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="24" d:DesignWidth="120">
    <UserControl.Resources>
        <Style x:Key="TimePickerToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Time Display TextBox -->
        <TextBox x:Name="txtTime" 
                 d:Text="09:00"
                 Text="{Binding SelectedTime, RelativeSource={RelativeSource AncestorType=UserControl}, 
                        StringFormat='{}{0:HH:mm}', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Stretch" 
                 HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                 BorderBrush="{Binding BorderBrush, ElementName=popupButton}"
                 BorderThickness="{Binding BorderThickness, ElementName=popupButton}"/>

        <!-- Dropdown Button -->
        <ToggleButton x:Name="popupButton" Grid.Column="1" Content="🕑"
                      VerticalAlignment="Center" Foreground="#666666"
                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                      Style="{StaticResource TimePickerToggleButtonStyle}">
            <!--<Path Width="8" Height="5" Fill="Black" Data="M 0 0 L 8 0 L 4 5 Z"/>-->
        </ToggleButton>

        <!-- Popup with Time Picker -->
        <Popup IsOpen="{Binding IsChecked, ElementName=popupButton}" 
               PlacementTarget="{Binding ElementName=txtTime}"
               StaysOpen="False" 
               AllowsTransparency="True">
            <Border BorderBrush="Gray" BorderThickness="1" Background="White" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Time Selection Controls -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <!-- Hours -->
                        <Grid Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Content="▲" Width="30" Height="20" Click="HourUp_Click"/>
                            <TextBox x:Name="txtHour" Grid.Row="1" Width="30" Height="25" 
                                     Text="{Binding Hour, RelativeSource={RelativeSource AncestorType=UserControl}, 
                                            StringFormat='{}{0:00}', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     TextAlignment="Center"/>
                            <Button Content="▼" Grid.Row="2" Width="30" Height="20" Click="HourDown_Click"/>
                        </Grid>

                        <TextBlock Text=":" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>

                        <!-- Minutes -->
                        <Grid Margin="5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Content="▲" Width="30" Height="20" Click="MinuteUp_Click"/>
                            <TextBox x:Name="txtMinute" Grid.Row="1" Width="30" Height="25" 
                                     Text="{Binding Minute, RelativeSource={RelativeSource AncestorType=UserControl}, 
                                            StringFormat='{}{0:00}', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     TextAlignment="Center"/>
                            <Button Content="▼" Grid.Row="2" Width="30" Height="20" Click="MinuteDown_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="OK" Width="50" Margin="0,0,5,0" Click="OkButton_Click"/>
                        <Button Content="Cancel" Width="50" Click="CancelButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>