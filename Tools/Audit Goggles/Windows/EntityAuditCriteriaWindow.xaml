<Window x:Class="Formula81.XrmToolBox.Tools.AuditGoggles.Windows.EntityAuditCritieriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:localmocks="clr-namespace:Formula81.XrmToolBox.Tools.AuditGoggles.Mocks"
        xmlns:f81partscomponents="clr-namespace:Formula81.XrmToolBox.Libraries.Parts.Components;assembly=Formula81.XrmToolBox.Libraries.Parts"
        xmlns:f81partscontrols="clr-namespace:Formula81.XrmToolBox.Libraries.Parts.Controls;assembly=Formula81.XrmToolBox.Libraries.Parts"
        mc:Ignorable="d" Height="300" Width="500"
        Title="Entity Audit Filters">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="ListBox" x:Key="SelectableEnumItemListBox">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate DataType="{x:Type f81partscomponents:CheckableEnumItem}">
                        <WrapPanel>
                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                            <TextBlock Text="{Binding DisplayName}" Margin="2,0,0,0" />
                        </WrapPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel Margin="5">
        <Grid DockPanel.Dock="Bottom" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ResetButton" Content="Reset" Width="100" HorizontalAlignment="Left" />
            <Button x:Name="SubmitButton" Grid.Column="1" Content="Ok" Width="100" IsDefault="True" />
            <Button x:Name="CancelButton" Grid.Column="2" Content="Cancel" Width="100" Margin="2,0,0,0" IsCancel="True" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="65*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Changed Date From" />
            <CheckBox x:Name="ChangedDateFromCheckBox" Grid.Column="1" />
            <Grid Grid.Column="2" Margin="0,0,0,1"
                  IsEnabled="{Binding IsChecked, ElementName=ChangedDateFromCheckBox}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="35*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="ChangedDateFromDatePicker" />
                <f81partscontrols:TimePicker x:Name="ChangedDateFromTimePicker" Grid.Column="1" Margin="2,0,0,0" />
            </Grid>
            <Label Grid.Row="1" Content="Changed Date To" />
            <CheckBox x:Name="ChangedDateToCheckBox" Grid.Column="1" Grid.Row="1"/>
            <Grid Grid.Column="2" Grid.Row="1" Margin="0,1,0,1"
                  IsEnabled="{Binding IsChecked, ElementName=ChangedDateToCheckBox}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="35*" />
                </Grid.ColumnDefinitions>
                <DatePicker x:Name="ChangedDateToDatePicker" />
                <f81partscontrols:TimePicker x:Name="ChangedDateToTimePicker" Grid.Column="1" Margin="2,0,0,0"  />
            </Grid>
            <Label Content="Operation" Grid.Row="2" />
            <CheckBox x:Name="OperationCheckBox" Grid.Column="1" Grid.Row="2" VerticalAlignment="top" Margin="0,5,0,0"/>
            <ListBox x:Name="OperationListBox" Grid.Column="2" Grid.Row="2" Margin="0,1,0,1"
                     Style="{StaticResource SelectableEnumItemListBox}"
                     IsEnabled="{Binding IsChecked, ElementName=OperationCheckBox}">
                <d:ListBox.ItemsSource>
                    <localmocks:EntityAuditFilterOperationListBoxItemsSource />
                </d:ListBox.ItemsSource>
            </ListBox>
            <Label Content="Action" Grid.Row="3" />
            <CheckBox x:Name="ActionCheckBox" Grid.Column="1" Grid.Row="3" VerticalAlignment="top" Margin="0,5,0,0" />
            <ListBox x:Name="ActionListBox" Grid.Column="2" Grid.Row="3" Margin="0,1,0,0"
                     Style="{StaticResource SelectableEnumItemListBox}"
                     IsEnabled="{Binding IsChecked, ElementName=ActionCheckBox}" />
        </Grid>
    </DockPanel>
</Window>
